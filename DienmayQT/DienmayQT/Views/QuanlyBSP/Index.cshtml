@model IEnumerable<DienmayQT.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}
<h2>Danh sách sản phẩm </h2>


<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-striped" id="MoonTable">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Gía bán
            </th>
            <th>
                Gía gốc
            </th>
            <th>
                Gía góp
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Hình ảnh
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model) {
            <tr>
                <td>
                   @item.MaSP
                </td>
                <td>
                    @item.TenSP
                </td>
                <td>
                    @item.GiaBan.ToString("N0")
                </td>
                <td>
                    @item.GiaGoc.ToString("N0")
                </td>
                <td>
                    @item.GiaGop.ToString("N0")
                </td>
                <td>
                    @item.SoLuongTon.ToString("N0")
                </td>
                <td>
                    @item.LoaiSanPham.TenLoai
                </td>
                <td>
                    <img src="@Url.Action("Details",new{id=item.id})" />
                </td>
                <td>
                    <a href="@Url.Action("Edit",new{id = item.id})">
                        <span class="glyphicon glyphicon-pencil"> |</span>
                    </a>
                    <a class="pull-right" href="@Url.Action("Delete",new{id=item.id})">
                        <span class=" glyphicon glyphicon-trash"> |</span>
                    </a>
                   
                </td>
            </tr>
        }
    </tbody>


</table>
@section scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css "rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
           $(document).ready(function () {
               $('#MoonTable').DataTable();
               $('.dataTables_filter').css("float","left");
               $('.dataTables_length').css("float","right");


});
    </script>
        }